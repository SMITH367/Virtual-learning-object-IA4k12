---
// Importa el componente de React.
// La ruta de importación cambia porque el archivo está más profundo ahora.
import PercepcionBasica from '../../../components/games/PercepcionBasica';
import Header from '../../../components/layout/Navbar.astro';
import "../../../styles/tailwind.css";

// 1. FUNCIÓN OBLIGATORIA: Define las rutas para los 6 grados
export async function getStaticPaths() {
  return [
    { params: { grado: 'segundo' } },
    { params: { grado: 'tercero' } },
    { params: { grado: 'cuarto' } },
    { params: { grado: 'quinto' } }, // NUEVO
    { params: { grado: 'sexto' } }, // NUEVO
    { params: { grado: 'septimo' } }, // NUEVO
  ];
}

// 2. Obtener el parámetro de la URL
// Astro automáticamente detectará 'segundo', 'tercero', etc.
const { grado } = Astro.params;

// 3. Definir las props y el contenido estático según el grado
let percepcionProps;
let contenidoEstatico; 

switch (grado) {
  case 'segundo':
    percepcionProps = { grado: 'grado1', titulo: '1° 👁️ VEO', descripcion: 'PERCIBE formas simples. ¡Ayúdalo a VER!' };
    contenidoEstatico = 'La IA mira y clasifica figuras. Es más fácil clasificar formas simples.';
    break;
  case 'tercero':
    percepcionProps = { grado: 'grado2', titulo: '2° 👂 ESCUCHO', descripcion: 'PERCIBE sonidos clave (alertas). ¡Ayúdalo a OÍR!' };
    contenidoEstatico = 'La IA escucha ruidos, pero solo presta atención al sonido más importante.';
    break;
  case 'cuarto':
    percepcionProps = { grado: 'grado3', titulo: '3° 📊 PREDIGO', descripcion: 'PERCIBE patrones en los datos. ¡Ayúdalo a ADIVINAR!' };
    contenidoEstatico = 'Si la IA ve un patrón muchas veces, ¡sabe qué va a pasar después!';
    break;
  case 'quinto':
    percepcionProps = { grado: 'grado4', titulo: '4° 🧠 APRENDO', descripcion: 'PERCIBE con prueba y error. ¡Ayúdalo a APRENDER!' };
    contenidoEstatico = 'Cada vez que el Robot choca (🛑) o recibe un premio (⭐), ¡aprende algo nuevo!';
    break;
  case 'sexto':
    percepcionProps = { grado: 'grado5', titulo: '5° 👃 HUELE', descripcion: 'PERCIBE la composición química (peligro). ¡Ayúdalo a OLER!' };
    contenidoEstatico = 'Los robots huelen y saborean analizando las moléculas y la composición química. ¡Identifica el peligro!';
    break;
  case 'septimo':
    percepcionProps = { grado: 'grado6', titulo: '6° 🧍 SIENTO', descripcion: 'PERCIBE su propio estado (Equilibrio/Tareas). ¡Ayúdalo a SENTIRSE!' };
    contenidoEstatico = 'La IA sabe cómo está su cuerpo (sensores de equilibrio) y qué debe hacer para completar su tarea.';
    break;
  default:
    percepcionProps = { grado: 'grado1', titulo: 'Error', descripcion: 'Lección no encontrada.' };
    contenidoEstatico = '¡Vuelve a la página principal!';
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OVA IA - {percepcionProps.titulo}</title>
</head>
<body class="bg-gray-50 min-h-screen">
  <Header/>
  <main class="max-w-4xl mx-auto p-4 sm:p-8">
    <header>
      <h1 class="text-4xl font-extrabold text-center mb-6 text-gray-800">
        🤖 La IA y Sus Super-Sentidos (6 Grados)
      </h1>
      
      
    </header>

    <p class="text-2xl leading-relaxed mb-6 bg-white p-6 rounded-xl shadow-lg border-l-4 border-blue-500">
      {contenidoEstatico}
    </p>

    <PercepcionBasica
      grado={percepcionProps.grado}
      titulo={percepcionProps.titulo}
      descripcion={percepcionProps.descripcion}
      client:load 
    />
    
    <footer class="mt-8 text-center text-gray-500 text-sm">
      <p>Proyecto educativo: ¡Los robots están aprendiendo contigo!</p>
    </footer>
  </main>
</body>
</html>