---
import { trivias } from "../../../data/trivia.js";
import Header from '../../../components/layout/Navbar.astro';
// Generar los paths dinÃ¡micos para cada curso
export async function getStaticPaths() {
  return trivias.map((trivia) => ({
    params: { grado: trivia.course },
  }));
}

import Triviaa from '../../../components/games/Trivia.jsx';
import "../../../styles/tailwind.css";

const { grado } = Astro.params;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Trivia - Curso {grado}</title>
  </head>
  <body class="bg-gray-100">
    <Header/>
    <div class="p-10">
      <h1 class="text-2xl font-bold mb-6 text-indigo-800">Trivia - Curso {grado}</h1>
      <Triviaa client:idle course={grado} />

    </div>
    
  </body>
</html>

